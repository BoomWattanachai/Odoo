<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    
        <record model="ir.ui.view" id="scg_product_product_uom_form_view">
            <field name="name">product.uom.form.view.scg.product</field>
            <field name="model">uom.uom</field>
            <field name="inherit_id" ref="uom.product_uom_form_view"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="uom_label"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="scg_product_product_uom_tree_view">
            <field name="name">product.uom.tree.view.scg.product</field>
            <field name="model">uom.uom</field>
            <field name="inherit_id" ref="uom.product_uom_tree_view"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="uom_label"/>
                </field>
                <field name="uom_label" position="after">
                    <field name="factor"/>
                </field>
                <field name="factor" position="after">
                    <field name="factor_inv"/>
                </field>
            </field>
        </record>
        
    </data>
</odoo>